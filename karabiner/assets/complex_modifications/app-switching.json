{
    "title": "App switching",
    "rules": [
        {
            "description": "CMD + f1 to open Settings",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f1",
                        "modifiers": {
                            "mandatory": ["left_command"]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open -a 'System Preferences'"
                        }
                    ]
                }
            ]
        },
        {
            "description": "CMD + f9 to open Karabiner",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f9",
                        "modifiers": {
                            "mandatory": ["left_command"]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open '/Applications/Karabiner-Elements.app'"
                        }
                    ]
                }
            ]
        },
        {
            "description": "CMD + f2 to open Finder",
            "manipulators": [
                {
                    "type": "basic",
