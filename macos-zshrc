export ZSH="/Users/finn/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(git)

source $ZSH/oh-my-zsh.sh

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# autojump
[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh

# node path
export NODE_PATH=`npm root -g`

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/finn/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/finn/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/finn/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/finn/google-cloud-sdk/completion.zsh.inc'; fi

export BAT_THEME="Solarized (light)"

export CONNECT_APP_DIR=/Users/finn/projects/connect
source ~/.aliases
